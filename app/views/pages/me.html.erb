
<h1>Meu perfil</h1>
<div class="row">
<% current_user.posts.each do |p| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-body small">
          <%= image_tag(p.post_image) %>
          <p class="comment"><%= p.description %></p>
        </div>
      </div>
    </div>
<% end %>
</div>
