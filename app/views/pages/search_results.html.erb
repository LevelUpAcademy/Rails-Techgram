<% if @posts == nil || @posts.count < 1%>
  <p>Não há postagens</p>
<% end %>

<% @posts.each do |p| %>
    <div class="row post">
      <div class="col-md-8 col-md-offset-2 col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= p.user.email %></h3>
          </div>
          <div class="panel-body">
            <%= image_tag(p.post_image) %>
            <p class="comment"><%= p.description %></p>
          </div>
        </div>
      </div>
    </div>
<% end %>
